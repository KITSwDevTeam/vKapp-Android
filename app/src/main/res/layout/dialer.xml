<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:id="@+id/editNum"
            android:background="@color/colorWhite"
            android:textIsSelectable="true"
            android:gravity="center"
            android:hint="Enter phone number"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn1"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn2"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn4"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn5"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn6"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn7"/>

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/map_module"
                    android:text="8"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn9"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_call_answer"
                    android:background="@drawable/map_module"
                    android:id="@+id/btnCall"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btn0"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_backspace_arrow"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/map_module"
                    android:id="@+id/btnBackspace"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>